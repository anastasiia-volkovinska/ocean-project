mixin lotteryRow(options)
	div(class=options.className+"__row")
		each item in options.items
			div(class=options.className+"__item" data-type=item.hot)
				div(class=options.className+"__figure")
					img(class=options.className+"__img" src=item.src, alt='')
					div(class=options.className+"__hover")
						a(class=options.className+"__win" href="game.html") play to win
				p(class=options.className+"__descr" data-type=item.star)
					| #{item.name}
					em #{item.type}

-
	var lotteryItems = {
	className: "lottery",
	items: [
	{hot: "new", src: "img/lottery/lottery-1.png", star: "star", name: "Lotto 7 - 42", type: "UTC 06:00 - 00:00"},
	{hot: "hot", src: "img/lottery/lottery-2.png", star: "star", name: "Lotto 5 - 36", type: "UTC 06:00 - 00:00"},
	{hot: "", src: "img/lottery/lottery-3.png", star: "", name: "Lotto 6 - 49", type: "UTC 06:00 - 00:00"},
	{hot: "", src: "img/lottery/lottery-4.png", star: "star", name: "Lotto 6 - 49", type: "UTC 06:00 - 00:00"},
	{hot: "new", src: "img/lottery/lottery-5.png", star: "star", name: "Lotto 7 - 42", type: "UTC 06:00 - 00:00"}
	]
	}

.lottery
	h2.lottery__title Lottery
	+lotteryRow(lotteryItems)
