mixin withdrawRow(row, className)
	tr(class=className+"__row")
		td(class=className+"__item")
			img(class=className+"__img" src=row.src alt="")
			| #{row.name}
		td(class=className+"__item")= row.commission
		td(class=className+"__item")
			span Min. 
				em #{row.min}
				|&nbsp;UAH
			span Max. 
				em #{row.max}
				|&nbsp;UAH
		td(class=className+"__item") 
			button(class=className+"__button") Withdraw
	+withdrawOpen(row, className)

