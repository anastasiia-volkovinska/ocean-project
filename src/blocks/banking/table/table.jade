mixin table(options)
	table(class=options.className+"__table")
		thead
			tr(class=options.className+"__header")
				each header in options.thead
					th= header
		tbody
			each item, index in options.rows
				if(options.className == "bankingDeposit")
					+depositRow(item, options.className)
				else
					+withdrawRow(item, options.className)
