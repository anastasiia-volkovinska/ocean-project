mixin withdrawOpen(row, className)
	tr(class=className+"__openRow closed")
		td(colspan="4") 
			div(class=className+"__openItem")
				img(class=className+"__close" src="img/profile/close.png" alt="")
				table(class=className+"__openTable" cellspacing="0" cellpadding="0")
					tr
						th(width="30%") &nbsp;
						th(width="20%") &nbsp;
						th(width="25%") &nbsp;
						th(width="25%") &nbsp;
					tr
						td
							p(class=className+"__openHeader")
								img(class=className+"__openImg" src=row.src alt="")
								| #{row.name}
						td(class=className+"__item") #{row.commission}
						td(class=className+"__item")
							span Min. 
								em #{row.min}
								|&nbsp;UAH
							span Max. 
								em #{row.max}
								|&nbsp;UAH
						td &nbsp;
				p(class=className+"__openText")= row.text
				form(class=className+"__openForm" action="#")
					label(class=className+"__openLabel") Amount:
						input(class=className+"__openInput" placeholder="0.00")
					input(class=className+"__openSubmit" type="submit" value="Continue")

