mixin gameRow(options)
	div(class=options.className+"__row")
		each item in options.items
			div(class=options.className+"__item" data-type=item.hot)
				div(class=options.className+"__figure")
					img(class=options.className+"__img" src=item.src, alt='')
					div(class=options.className+"__hover")
						a(class=options.className+"__win" href="game.html") play to win
						a(class=options.className+"__fun" href="game.html") play for fun
				p(class=options.className+"__descr" data-type=item.star)
					| #{item.name}
					em #{item.type}
.games
	aside.games__aside
		.aside
			h3.aside__title Games Casino
			ul.aside__list
				each item in asideItems
					li.aside__item
						img.aside__img(src=item.src alt='')
						p.aside__text #{item.text}
						.aside__box
							span.aside__number #{item.number}

	section.gamesNew.open
		.gamesNew__title New games
			a(href='#') View All
		+gameRow(newRow)
	section.gamesPopular.open
		.gamesPopular__title Popular games
			a(href='#') View All
		+gameRow(popularRow)
	section.gamesVideo.withoutLine.open
		.gamesVideo__title Video Slots
			a(href='#') View All
		+gameRow(videoRow)
	button.games__more View more
